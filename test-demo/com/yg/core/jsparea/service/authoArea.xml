<properties>
	
		<property name="addAuthoArea">
		<![CDATA[
			insert into ta_autho_area (AREA_ID,AREA_CODE,AREA_NAME,PARENT_AREA_CODE,SORT_NUM) values(#[areaId],#[areaCode],#[areaName],#[parentAreaCode],#[sortNum])
		]]>
	</property>
		<property name="deleteByKey">
		<![CDATA[
			delete from ta_autho_area where AREA_ID=?
		]]>
	</property>
		<property name="updateAuthoArea">
		<![CDATA[
			update ta_autho_area set AREA_ID=#[areaId],AREA_CODE=#[areaCode],AREA_NAME=#[areaName],PARENT_AREA_CODE=#[parentAreaCode],SORT_NUM=#[sortNum] where AREA_ID=#[areaId]
		]]>
	</property>
		<property name="selectById">
		<![CDATA[
			select * from ta_autho_area where AREA_ID=?
		]]>
	</property>
		<property name="queryListAuthoArea">
		<![CDATA[
			select * from ta_autho_area where 1=1
#if($areaName && !$areaName.equals(""))
	and AREA_NAME like #[areaName]		
#end
#if($areaCode && !$areaCode.equals(""))
	and AREA_CODE like #[areaCode]		
#end
#if($sortKey && !$sortKey.equals(""))
order by $sortKey #if($sortDesc)desc#else asc#end
#else
order by SORT_NUM desc#end
		]]>
	</property>
	</properties>